<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="aidialog_background">#ffffffff</color>
    <color name="icon_orange_color">#f26c29</color>
    <color name="main_bg_color">#FF2a91be</color>
    <color name="mic_button_halo">#20000000</color>
    <declare-styleable name="MaskedColorView"><attr format="color|reference" name="mainColor"/></declare-styleable>
    <declare-styleable name="SoundLevelButton"><attr format="dimension" name="minRadius"/><attr format="dimension" name="maxRadius"/><attr format="dimension" name="circleCenterX"/><attr format="dimension" name="circleCenterY"/><attr format="color" name="centerColor"/><attr format="color" name="haloColor"/><attr format="boolean" name="state_listening"/><attr format="boolean" name="state_waiting"/><attr format="boolean" name="state_speaking"/><attr format="boolean" name="state_initializing_tts"/></declare-styleable>
    <dimen name="mic_button_halo_radius_max">76dp</dimen>
    <dimen name="mic_button_halo_radius_min">35dp</dimen>
    <dimen name="mic_button_size">152dp</dimen>
    <string name="app_name">AILib</string>
    <string name="default_aidialog_title">Speak</string>
    <style name="ApiAi"/>
    <style name="ApiAi.FullScreenDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="ApiAi.Microphone">
	    <item name="mainColor">@color/mic_colors</item>
	    <item name="maxRadius">@dimen/mic_button_halo_radius_max</item>
	    <item name="minRadius">@dimen/mic_button_halo_radius_min</item>
	    <item name="centerColor">@color/icon_orange_color</item>
	    <item name="haloColor">@color/mic_button_halo</item>
	    <item name="android:src">@drawable/mic_control</item>
	    <item name="android:paddingTop">0dp</item>
	    <item name="android:paddingBottom">0dp</item>
	    <item name="android:paddingLeft">0dp</item>
	    <item name="android:paddingRight">0dp</item>
	    <item name="android:layout_margin">0dp</item>
	    <item name="android:layout_width">@dimen/mic_button_size</item>
	    <item name="android:layout_height">@dimen/mic_button_size</item>
	    <item name="android:scaleType">centerInside</item>
	</style>
</resources>